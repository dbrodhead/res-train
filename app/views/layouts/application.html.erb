<!DOCTYPE html>
<html>
<head>
  <title>ResTraining</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
  <body>
  <div class="container-fluid">
	<div class="row-fluid">
		<div class="span12">
			<div class="navbar navbar-inverse">
				<div class="navbar-inner">
					<div class="container-fluid">
						 <a data-target=".navbar-responsive-collapse" data-toggle="collapse" class="btn btn-navbar"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></a> <a href="#" class="brand">CARLETON Training</a>
						<div class="nav-collapse collapse navbar-responsive-collapse">
							<ul class="nav">
								<li class="active">
									<%= link_to "Home", root_path %>
								</li>
								<li>
									<%= link_to "About", about_path %>
								</li>
								<li>
                  <%= link_to "Contact", contact_path %>
								</li>
                <li>
                  <%= link_to "Help", help_path %>
								</li>
							</ul>
							<ul class="nav pull-right">
                <% if can? :manage, :all %>
								<li>                  
                  <%= link_to "Active Admin", admin_dashboard_path %>						
								</li>
                <% end %>
                <% if can? :manage, :all %>
								<li class="dropdown">
									 <a data-toggle="dropdown" class="dropdown-toggle" href="#">Admin<strong class="caret"></strong></a>
									<ul class="dropdown-menu">
										<li>
											<%= link_to 'Periods', periods_path %>
										</li>
										<li>
											<%= link_to 'Period Groups', pgroups_path %>
										</li>
									</ul>
								</li>
                <% end %>
							</ul>
						</div>
						
					</div>
				</div>
				
			</div>
		</div>
	</div>
    
	<div class="row-fluid">
		<div class="span2">
			<ul class="nav nav-list">
				<li class="nav-header">
					Unit
				</li>
				<li>
					<%= link_to 'Trades', trades_path %>
				</li>
        <li>
					<%= link_to 'Departments', departments_path %>
				</li>

				<li class="nav-header">
					Training
				</li>
				<li>
					<%= link_to 'Training Calendar', training_days_path %>
				</li>
        <li>
					<%= link_to 'Training Sessions', tsessions_path %>
				</li>
        <li>
					<%= link_to 'CRRs', crrs_path %>
				</li>
			</ul>
      <div class="span12">
        <div class="well">
        <% if user_signed_in? %>
           <button class="btn btn-primary" type="button"><%= link_to('Logout', destroy_user_session_path, :method=>'delete') %></button>
        <% else %>
           <button class="btn btn-primary" type="button"><%= link_to('Login', new_user_session_path) %></button>
        <% end %>
        <% if user_signed_in? %>
          <button class="btn" type="button"><%= link_to('Edit account', edit_user_registration_path) %></button>
        <% else %>
           <button class="btn" type="button"><%= link_to('Sign up', new_user_registration_path) %></button>
        <% end %>
        </div>          
       </div>
		</div>
		<div class="span10">
      <%= render 'layouts/messages' %>
      <%= yield %>
		</div>
	</div>
</body>
</html>