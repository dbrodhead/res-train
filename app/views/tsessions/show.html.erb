<%- model_class = Tsession -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:training_day_id) %>:</strong></dt>
  <dd><%= @tsession.training_day.day %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trade_id) %>:</strong></dt>
  <dd><%= @tsession.trade.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:period_id) %>:</strong></dt>
  <dd><%= @tsession.period.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instructor) %>:</strong></dt>
  <dd><%= @tsession.instructor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activity) %>:</strong></dt>
  <dd><%= @tsession.activity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @tsession.location %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              session.delete(:return_to), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tsession_path(@tsession), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tsession_path(@tsession),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
