<%- model_class = Crr -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @crr.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @crr.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:link) %>:</strong></dt>
  <dd><%= @crr.link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expiry) %>:</strong></dt>
  <dd><%= @crr.expiry %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              crrs_path, :class => 'btn'  %>
  <% if can? :update, Crr %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_crr_path(@crr), :class => 'btn' %>
  <% end %>
  <% if can? :destroy, Crr %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              crr_path(@crr),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
